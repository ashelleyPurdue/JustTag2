<UserControl x:Class="JustTag2.TagPallette.TagPalletteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lc="clr-namespace:IllusoryStudios.Wpf.LostControls;assembly=IllusoryStudios.Wpf.LostControls"
             xmlns:local="clr-namespace:JustTag2.TagPallette"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <ContextMenu x:Key="categoryContextMenu">
            <MenuItem
                Header="Add Tag"
                Click="AddTag_Click"/>

            <MenuItem
                Header="Delete Category"
                Click="DeleteCategory_Click"/>
        </ContextMenu>

        <ContextMenu x:Key="tagContextMenu">

            <MenuItem
                Header="Delete Tag"
                Click="DeleteTag_Click"/>

        </ContextMenu>

    </UserControl.Resources>
    <Grid>
        <TreeView 
            ItemsSource="{Binding Categories}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <TreeView.Resources>

                <HierarchicalDataTemplate
                    DataType="{x:Type local:TagCategory}"
                    ItemsSource="{Binding Tags}">

                    <lc:EditableLabel 
                        Text="{Binding Name}"
                        ContextMenu="{StaticResource categoryContextMenu}"/>

                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type local:Tag}">
                    <!-- TODO: Add a delete button -->


                    <lc:EditableLabel
                        x:Name="tagLabel"
                        Text="{Binding Name}"
                        Tag="{Binding Name}"
                        ToolTip="{Binding Desc}"
                        ContextMenu="{StaticResource tagContextMenu}"
                        
                        MouseMove="Tag_MouseMove"
                        TouchDown="Tag_DragStart"
                        StylusDown="Tag_DragStart"/>

                    <DataTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter
                                TargetName="tagLabel"
                                Property="Background" 
                                Value="AliceBlue"/>
                        </Trigger>
                    </DataTemplate.Triggers>
                    
                </DataTemplate>

                <!-- Lay out the tags in a WrapPanel instead of a stack panel-->
                <ItemsPanelTemplate x:Key="tagsPanel">
                    <WrapPanel/>
                </ItemsPanelTemplate>
                
                <Style TargetType="TreeViewItem">
                    <Setter 
                        Property="ItemsPanel"
                        Value="{StaticResource tagsPanel}"/>
                </Style>

            </TreeView.Resources>

            <TreeView.ContextMenu>
                <ContextMenu>

                    <MenuItem
                        Header="Add Category"
                        Click="AddCategory_Click"/>

                </ContextMenu>
            </TreeView.ContextMenu>
            
        </TreeView>
    </Grid>
</UserControl>
