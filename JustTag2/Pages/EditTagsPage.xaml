<Page x:Class="JustTag2.Pages.EditTagsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:tp="clr-namespace:JustTag2.TagPallette"
      xmlns:local="clr-namespace:JustTag2.Pages"
      xmlns:jt="clr-namespace:JustTag2"
      xmlns:p="clr-namespace:JustTag2.Previewers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditTagsPage"
      Focusable="True"
      PreviewKeyDown="Page_PreviewKeyDown">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Width" Value="50"/>
                <Setter Property="VerticalAlignment"
                            Value="Bottom"/>
            </Style>
        </Grid.Resources>

        <!-- Previewer -->
        <p:MainPreviewer
            x:Name="previewer"
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="15,0,0,0"/>

        <!-- OK/Cancel buttons -->
        <Button 
            Content="OK"
            HorizontalAlignment="Right"
            Grid.Column="1"
            Grid.Row="0"
            Click="OK_Click" Height="20" Margin="10"/>

        <Button 
            Content="Cancel"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Column="0"
            Grid.Row="0"
            Click="Cancel_Click" Height="20" Margin="10"/>

    </Grid>
</Page>
