<Page x:Class="JustTag2.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JustTag2.Pages"
      xmlns:previewers="clr-namespace:JustTag2.Previewers"
        xmlns:tfb="clr-namespace:TabbedFileBrowser;assembly=TabbedFileBrowser"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <tfb:TabbedFileBrowserControl
            x:Name="browser"
            Grid.Column="0">

            <tfb:TabbedFileBrowserControl.ExtraContextMenuItems>

                <MenuItem
                    Header="Edit tags"
                    Click="EditTagsMenuItem_Click"/>

            </tfb:TabbedFileBrowserControl.ExtraContextMenuItems>

        </tfb:TabbedFileBrowserControl>

        <GridSplitter 
            Grid.Column="0"
            Width="5"/>

        <previewers:MainPreviewer
            x:Name="previewer"
            Grid.Column="1"/>

    </Grid>
</Page>
