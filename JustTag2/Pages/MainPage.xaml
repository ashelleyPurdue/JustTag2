<Page x:Class="JustTag2.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JustTag2.Pages"
      xmlns:previewers="clr-namespace:JustTag2.Previewers"
      xmlns:tfb="clr-namespace:TabbedFileBrowser;assembly=TabbedFileBrowser"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      KeyDown="Page_EnterPressed">
    <Page.Resources>

        <ContextMenu x:Key="fileContextMenu">
            <MenuItem Header="Delete"/>
        </ContextMenu>

        <DataTemplate x:Key="fileItem">
            <TextBlock
                Text="{Binding Name}"
                HorizontalAlignment="Left"
                Padding="10"/>
        </DataTemplate>

        <Style x:Key="fileItemContainerStyle" TargetType="Control">
            <Setter Property="ContextMenu" Value="{StaticResource fileContextMenu}"/>
        </Style>
            
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- File Browser -->
        <DockPanel
            Grid.Column="0"
            LastChildFill="True">

            <Grid 
                DockPanel.Dock="Top"
                Margin="5,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Refresh button -->
                <Button
                    Content="Refresh"
                    Grid.Column="0"
                    Click="Refresh_Click"/>

                <!-- Address bar-->
                <TextBox
                    x:Name="addressBar"
                    Text="{Binding CurrentFolder.FullName, Mode=OneWay}"
                    Grid.Column="1"
                    Margin="0,0,5,0"/>

                <GridSplitter
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Width="5"/>

                <!-- Search box -->
                <TextBox
                    Text="{Binding FilterString, UpdateSourceTrigger=PropertyChanged}"
                    Grid.Column="2"/>
            </Grid>

            <!-- Sort method dropdown -->
            <DockPanel 
                DockPanel.Dock="Top"
                LastChildFill="False">
                
                <TextBlock
                    Text="Descending"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"/>
                <CheckBox 
                    IsChecked="{Binding SortDescending, Mode=TwoWay}"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"/>

                <ComboBox
                    ItemsSource="{Binding SortMethods.Keys}"
                    SelectedIndex="{Binding SelectedSortMethodIndex, Mode=TwoWay}"
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"
                    Margin="5"/>
                <TextBlock
                    Text="Order by: "
                    DockPanel.Dock="Right"
                    VerticalAlignment="Center"/>
                
            </DockPanel>
            
            <!-- Visible files -->
            <ListView
                ItemsSource="{Binding VisibleFiles}"
                ItemTemplate="{StaticResource fileItem}"
                ItemContainerStyle="{StaticResource fileItemContainerStyle}"
                SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                DockPanel.Dock="Top"/>

        </DockPanel>

        <GridSplitter 
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="5"
            Width="5"/>

        <previewers:MainPreviewer
            x:Name="previewer"
            Grid.Column="1"
            Margin="15,5,5,5"
            TouchDown="Previewer_TouchDown"
            TouchUp="Previewer_TouchUp"
            TouchMove="Previewer_TouchMove"
            StylusDown="Previewer_StylusDown"
            StylusUp="Previewer_StylusUp"
            StylusSystemGesture="Previewer_StylusSystemGesture"
            Background="Transparent"/>

        <Button
            Content="Edit tags"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Click="EditTagsMenuItem_Click">

            <!-- Make the button only visible if selected file isn't null -->
            <Button.Style>
                <Style TargetType="Button">

                    <Style.Triggers>
                        <DataTrigger 
                            Binding="{Binding SelectedFile}"
                            Value="{x:Null}">

                            <Setter Property="Visibility" Value="Hidden"/>

                        </DataTrigger>
                    </Style.Triggers>

                    <Setter Property="Visibility" Value="Visible"/>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Page>
