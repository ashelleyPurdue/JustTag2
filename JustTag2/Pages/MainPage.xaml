<Page x:Class="JustTag2.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JustTag2.Pages"
      xmlns:previewers="clr-namespace:JustTag2.Previewers"
        xmlns:tfb="clr-namespace:TabbedFileBrowser;assembly=TabbedFileBrowser"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- File Browser -->
        <DockPanel
            Grid.Column="0"
            LastChildFill="True">

            <TextBox DockPanel.Dock="Top"/>
            <ListView DockPanel.Dock="Top"/>
        </DockPanel>

        <GridSplitter 
            Grid.Column="1"
            HorizontalAlignment="Left"
            Margin="5"
            Width="5"/>

        <previewers:MainPreviewer
            x:Name="previewer"
            Grid.Column="1"
            Margin="15,5,5,5"/>

        <Button
            Content="Edit tags"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="10"
            Click="EditTagsMenuItem_Click">

            <!-- Make the button only visible if selected file isn't null -->
            <Button.Style>
                <Style TargetType="Button">

                    <Style.Triggers>
                        <DataTrigger 
                            Binding="{Binding ElementName=browser, Path=ViewModel.SelectedFile}"
                            Value="{x:Null}">

                            <Setter Property="Visibility" Value="Hidden"/>

                        </DataTrigger>
                    </Style.Triggers>

                    <Setter Property="Visibility" Value="Visible"/>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Page>
